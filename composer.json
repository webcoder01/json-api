{
  "name": "webcoder01/json-api",
  "description": "A framework agnostic that helps you generate responses based on the JSON:API specification.",
  "type": "library",
  "keywords": [
    "php",
    "json",
    "JSON-API",
    "JSON_API"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Antoine Raymond",
      "email": "antoine.raymond@farnant.fr",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=8.1"
  },
  "autoload": {
    "psr-4": {
      "JsonApi\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "JsonApi\\Tests\\": "tests/"
    }
  },
  "config": {
    "sort-packages": true
  },
  "require-dev": {
    "brainmaestro/composer-git-hooks": "^3.0",
    "friendsofphp/php-cs-fixer": "^3.85",
    "phpspec/prophecy": "^1.22",
    "phpunit/phpunit": "10.5.*"
  },
  "extra": {
    "hooks": {
      "config": {
        "stop-on-failure": ["pre-push"]
      },
      "pre-commit": [
        "./vendor/bin/php-cs-fixer fix src"
      ],
      "pre-push": [
        "./vendor/bin/phpunit tests"
      ]
    }
  }
}
